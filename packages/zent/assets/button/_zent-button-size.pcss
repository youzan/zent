@import '../theme/_font.pcss';
@import './_zent-button-variable.pcss';

.zent-btn-large {
  padding: 0 24px;
  height: $btn-height-large;
  line-height: calc($btn-height-large - 2px);
  font-size: $font-size-large;
}

.zent-btn-small {
  height: $btn-height-small;
  line-height: calc($btn-height-small - 2px);
  padding: 0 8px;
}

.zent-btn-block {
  display: block;
  width: 100%;
  padding: 0;
}
