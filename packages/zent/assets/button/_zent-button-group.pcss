.zent-btn-group {
  display: inline-block;

  .zent-btn + .zent-btn {
    margin-left: -1px;
  }

  .zent-btn {
    position: relative;
    border-radius: 0;

    &:hover {
      z-index: 2;
    }

    &:first-child {
      border-radius: 2px 0 0 2px;
    }

    &:last-child {
      border-radius: 0 2px 2px 0;
    }
  }

  .zent-btn-primary:not(:last-child) {
    border-right-color: $btn-primary-hover;
  }

  .zent-btn-primary:not(:first-child) {
    border-left-color: $btn-primary-hover;
  }

  .zent-btn-danger:not(:last-child) {
    border-right-color: $btn-danger-hover;
  }

  .zent-btn-danger:not(:first-child) {
    border-left-color: $btn-danger-hover;
  }

  .zent-btn-success:not(:last-child) {
    border-right-color: $btn-success-hover;
  }

  .zent-btn-success:not(:first-child) {
    border-left-color: $btn-success-hover;
  }
}

.zent-btn-group + .zent-btn-group,
.zent-btn-group + .zent-btn,
.zent-btn + .zent-btn-group {
  margin-left: 10px;
}
