@import './_zent-button-variable.pcss';
@import '../theme/_font.pcss';
@import '../theme/default.pcss';

.zent-link {
  text-decoration: none;
  color: $btn-primary;
  display: inline-block;
  padding: 2px 8px;
  border-radius: 2px;

  @include font-normal;

  &:link,
  &:visited,
  &:focus {
    color: $btn-primary;
  }

  &:hover {
    color: $btn-primary-hover;
    background: $theme-stroke-7;
  }

  &:active {
    color: $btn-primary-active;
    background: $theme-stroke-7;
  }

  &.zent-link__disabled {
    color: $btn-gray;
    cursor: not-allowed;
    background: transparent;
  }
}
