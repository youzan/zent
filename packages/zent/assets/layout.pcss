.zent-row {
  &:after {
    content: "";
    display: table;
    clear: both;
  }

  zoom: 1;
}

.zent-col {
  float: left;
  box-sizing: border-box;
}

@for $i from 1 to 24 by 1 {
  $percent: calc($i / 24 * 100%);

  .zent-col-$i {
    width: $percent;
  }

  .zent-col-offset-$i {
    margin-left: $percent;
  }
}
