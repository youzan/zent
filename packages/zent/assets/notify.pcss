.zent-notify {
  position: fixed;
  top: 80px;
  left: 25%;
  right: 25%;
  line-height: 40px;
  font-size: 14px;
  color: #fff;
  text-align: center;
  border-radius: 2px;
  z-index: 10000;
  min-height: 40px;

  &.zent-notify-success {
    border: 1px solid #3aa074;
    background: #45b182;
  }

  &.zent-notify-error {
    border: 1px solid #e23333;
    background: #ff4343;
  }
}
