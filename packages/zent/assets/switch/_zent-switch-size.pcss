/* large switch not use */
.zent-switch-large {
  height: 50px;
  line-height: 12px;
  width: 90px;
  border-radius: 50px;

  &:after {
    width: 44px;
    height: 44px;
    top: 2px;
    left: 2px;
  }

  &.zent-switch-checked {
    &:after {
      left: 42px;
    }
  }
}

/* small switch */
.zent-switch-small {
  width: 28px;
  height: 16px;

  &:after {
    width: 12px;
    height: 12px;
    left: 1px;
    top: 1px;
  }

  &.zent-switch-checked:after {
    left: 13px;
  }
}
