{
  "preset": "ts-jest/presets/js-with-babel",
  "globals": {
    "ts-jest": {
      "compiler": "ttypescript",
      "tsConfig": "tsconfig.test.json"
    },
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "transformIgnorePatterns": ["/node_modules/(?!(lodash-es)/)"],
  "testURL": "https://youzan.github.io/zent",
  "verbose": true,
  "automock": false,
  "collectCoverage": true,
  "coverageReporters": ["text", "text-summary", "lcov", "html"],
  "coverageThreshold": {
    "global": {
      "statements": 96,
      "branches": 85,
      "functions": 96,
      "lines": 96
    }
  },
  "timers": "fake",
  "testPathIgnorePatterns": [
    "<rootDir>/__tests__/table/comp",
    "<rootDir>/__tests__/select.js",
    "<rootDir>/__tests__/datetimepicker",
    "<rootDir>/__tests__/portal/.+"
  ],
  "coveragePathIgnorePatterns": [
    "<rootDir>/src/affix",
    "<rootDir>/src/infinite-scroller",
    "<rootDir>/src/sortable",
    "<rootDir>/src/waypoint",
    "<rootDir>/src/colorpicker/helpers/reactcss",
    "<rootDir>/src/colorpicker/SketchFields.tsx",
    "<rootDir>/src/colorpicker/SketchPresetColors.tsx",
    "<rootDir>/src/colorpicker/common/ColorWrap.tsx",
    "<rootDir>/src/colorpicker/helpers/checkboard.ts",
    "<rootDir>/src/utils/scroll.ts",
    "<rootDir>/src/utils/getWidth.ts",
    "<rootDir>/src/utils/component/AnimateHeight.tsx",
    "<rootDir>/scr/utils/component/LazyMount.tsx",
    "<rootDir>/scr/utils/date",
    "<rootDir>/src/utils/alcatraz",
    "<rootDir>/src/utils/dom/contains.ts",
    "<rootDir>/src/i18n",
    "<rootDir>/src/pagination",
    "<rootDir>/src/placeholder",
    "<rootDir>/src/collapse",
    "<rootDir>/src/select",
    "<rootDir>/src/datetimepicker",
    "<rootDir>/src/layout",
    "<rootDir>/src/form/.+",
    "<rootDir>/src/portal/.+",
    "<rootDir>/src/loading/.+",
    "<rootDir>/src/utils/style/warnValidStyle.ts",
    "<rootDir>/src/utils/dom/getScollPosition.ts",
    "<rootDir>/src/auto-complete/AutoComplete.tsx",
    "<rootDir>/src/notice/.+",
    "<rootDir>/src/utils/nextFrame.ts",
    "<rootDir>/src/utils/warning.ts",
    "<rootDir>/src/tabs/components/TabDivide.tsx"
  ],
  "moduleDirectories": ["node_modules", "src"]
}
